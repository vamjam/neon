{
  "name": "@neon/server",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "main": "dist/server.js",
  "private": true,
  "scripts": {
    "start": "node dist/server.js",
    "dx2": "yarn vite --config src/vite.config.ts",
    "dx": "yarn build -w",
    "build": "yarn ts:node scripts/build.ts",
    "ts:node": "node --experimental-json-modules --loader ts-node/esm",
    "clean": "yarn rimraf dist",
    "db:gen": "yarn prisma generate --schema=src/db/schema.prisma",
    "db:push": "yarn prisma db push --schema=src/db/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^4.4.0",
    "chalk": "^5.0.1",
    "conf": "^10.2.0",
    "express": "^4.18.1",
    "get-port": "^6.1.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "deepmerge": "^4.2.2",
    "esbuild": "^0.15.9",
    "prisma": "^4.3.1",
    "rimraf": "^3.0.2"
  }
}
