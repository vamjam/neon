{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "outDir": "../../bin",
    "declarationDir": "../../bin/@types",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["**/*.ts", "src/**/*.json"]
}
