{
  "name": "neon",
  "version": "1.0.0",
  "exports": "./index.js",
  "repository": "https://github.com/vammjam/neon",
  "license": "MIT",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=16.12.0"
  },
  "scripts": {
    "dx2": "nodemon -e ts,js dist/neon.server/index.js",
    "dx": "yarn concurrently \"yarn dx:server:build\" \"yarn dx:server:start\"",
    "dx:server:build": "nodemon -e ts --watch packages/neon.server/src --watch packages/neon.client/src --exec \"yarn build:server\"",
    "dx:server:start": "nodemon --watch dist/neon.server dist/neon.server/index.js",
    "dx:server": "yarn build:server --watch",
    "start:server": "node dist/neon.server/index.js",
    "tx:server": "yarn tsc -p packages/neon.server/tsconfig.json",
    "build:base": "yarn tsc -p packages/neon.base/tsconfig.json",
    "build:client": "yarn clean:client && yarn workspace @neon/client build",
    "build:server": "yarn tools build server && yarn build:client",
    "build:tools": "yarn tsc -p packages/neon.tools/tsconfig.json",
    "tools": "node --experimental-json-modules bin/src/index.js",
    "clean": "node bin/src/clean.js",
    "clean:db": "yarn clean \"./.data\"",
    "clean:client": "yarn clean \"dist/neon.server/assets/*.js\""
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "concurrently": "^7.0.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint"
    ]
  }
}
